#include <iostream>
using namespace std;

float calcularsumatoria (int N);
int main() {
    int N;

    do {
        cout << "Ingrese el valor de N: ";
        cin >> N;
    } while (N <= 0);

    float resultado = calcularsumatoria(N);

    cout << "La sumatoria es: " << resultado << endl;

    return 0;
}
// FunciÃ³n para calcular 
float calcularsumatoria(int N) {
    float suma = 0;
    for (int i = 1; i <= N; i++) {
        suma = suma + i;
    }
    return suma;
}
